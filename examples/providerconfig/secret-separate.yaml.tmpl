# Example secrets for separate credentials storage
# These secrets demonstrate how to store different credentials in separate secrets
---
apiVersion: v1
kind: Secret
metadata:
  name: yc-service-account-key
  namespace: crossplane-system
type: Opaque
stringData:
  sa-key.json: |
    {
      "id": "...",
      "service_account_id": "...",
      "created_at": "...",
      "key_algorithm": "RSA_2048",
      "public_key": "...",
      "private_key": "..."
    }
---
apiVersion: v1
kind: Secret
metadata:
  name: yc-storage-access-key
  namespace: crossplane-system
type: Opaque
stringData:
  access-key: "YCAJExxxxxxxxxxxxxxxxx"
---
apiVersion: v1
kind: Secret
metadata:
  name: yc-storage-secret-key
  namespace: crossplane-system
type: Opaque
stringData:
  secret-key: "YCOxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"